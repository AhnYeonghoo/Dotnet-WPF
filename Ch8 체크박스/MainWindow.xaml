<Window x:Class="Ch8_체크박스.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ch8_체크박스"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label>과일</Label>
            <CheckBox>
                딸기
            </CheckBox>
            <CheckBox Content="사과" />
            <CheckBox Content="수박" />
            <CheckBox Content="배"/>
            <CheckBox VerticalContentAlignment="Center"
                      x:Name="chkApple"
                      Checked="chkApple_Checked"
                      Unchecked="chkApple_Unchecked">
                <StackPanel Orientation="Horizontal">
                    <Image Source="https://cdn3.iconfinder.com/data/icons/people-emoji/50/Robot-1024.png" 
                           Width="50"/>
                    <TextBlock VerticalAlignment="Center" Text="청사과" x:Name="tb" />
                </StackPanel>
            </CheckBox>

        </StackPanel>
    </Grid>
</Window>
